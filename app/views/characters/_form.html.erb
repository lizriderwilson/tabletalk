<% if @character.errors %>
    <% @character.errors.each do |error| %>
        <p class="text-center my-1"><%= error.full_message %></p>
    <% end %>
<% end %>

<%= form_for [@campaign, @character] do |f| %>
    <%= f.hidden_field :player_id, value: current_user.id %>
    <%= f.hidden_field :campaign_id %>
    <div class="flex flex-col items-center">
        <div class="mb-3">
            <label for="character_player_id"><%= current_user.username %></label>
        </div>
        <div class="mb-3">
            <%= f.label "Name", for: "character_name", class: "" %></br>
            <%= f.text_field :name, class: "session-text-field" %>
        </div>
        <div class="mb-3">
            <%= f.label :bio, class: "" %></br>
            <%= f.text_area :bio, class: "session-text-field" %>
        </div>
        <%= f.submit "Create Character", class: "btn my-3" %>
    </div>
<% end %>
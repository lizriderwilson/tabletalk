<%= form_for @campaign do |f| %>
    <%= f.hidden_field :gm_id %>
    <div class="flex flex-col items-center">
        <div class="mb-3">
            <%= f.label :name, class: "" %></br>
            <%= f.text_field :name, class: "session-text-field" %>
        </div>
        <div class="mb-3">
            <%= f.label :description, class: "" %></br>
            <%= f.text_area :description, class: "session-text-field" %>
        </div>
        <div class="mb-3">
            <%= f.label :game_system, class: "" %></br>
            <%= f.text_field :game_system, class: "session-text-field" %>
        </div>
        <div class="mb-3">
            <%= f.label :is_public, "Public Game?", class: "" %></br>
            <%= f.check_box :is_public, class: "session-text-field" %>
        </div>
        <%= f.submit "Update", class: "btn my-3" %>
    </div>
<% end %>
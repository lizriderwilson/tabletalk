<div class="container mx-auto mt-4 flex">

    <div class="w-2/3">
        <div class="bg-primary-100 flex flex-col px-8" id="games">
            <div class="py-8 flex justify-between items-center">
                <h2 class="text-4xl font-bold">Your Games</h2>
                <div>
                    <%= link_to "Join", campaigns_path, class: "btn" %>
                    <%= link_to "Create", new_campaign_path, class: "btn" %>
                </div>
            </div>
            <div class="flex gap-2">
                <% @campaigns.each do |c| %>
                    <div class="w-1/3 bg-secondary-50">
                        <%= link_to c.name, campaign_path(c) %>
                        <p><%= c.game_system %></p>
                        <p>Next session: 7/1/2021</p>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="bg-primary-200 h-screen w-1/3">
        <div id="profile-card">
            <%= @user.email %>
            <%= link_to "Log Out", logout_path, method:'delete' %>
        </div>
    </div>
</div>
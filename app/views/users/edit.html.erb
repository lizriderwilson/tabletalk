<%= flash[:message] %>

<div class="bg-primary-200 w-full md:w-2/3 lg:w-1/2 p-4 mx-auto md:mt-10 md:py-6 md:rounded-xl">

    <h1 class="text-3xl font-bold text-center mb-4">Edit Profile</h1>

    <%= form_for @user do |f| %>
        <%= f.label :bio %>
        <%= f.text_area :bio %>
        <%= f.label :favorite_systems %>
        <%= f.text_field :favorite_systems %>
        <%= f.submit %>
    <% end %>

</div>
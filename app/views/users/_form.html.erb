<div class="bg-primary-200 w-full md:w-2/3 p-4">
    <%= form_for @user do |f| %>
        <div>
            <%= f.label :email %>
            <%= f.text_field :email %>
        </div>
        <div>
            <%= f.label :username %>
            <%= f.text_field :username %>
        </div>
        <div>
            <%= f.label :password %>
            <%= f.text_field :password %>
        </div>
        <div>
            <%= f.label :password_confirmation %>
            <%= f.text_field :password_confirmation %>
        </div>
        <%= f.submit "Submit" %>
    <% end %>
</div>